{
  "name": "patch-test",
  "displayName": "patch-test",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:patch-test.helloWorld",
    "onCommand:patch-test.generateTaskConfig",
    "onCommand:patch-test.submitTask",
    "onCommand:patch-test.openTaskManager",
    "onView:taskManager"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "task-manager-sidebar",
          "title": "任务管理器",
          "icon": "$(tasklist)"
        }
      ]
    },
    "views": {
      "task-manager-sidebar": [
        {
          "id": "taskManager",
          "name": "任务列表"
        }
      ]
    },
    "commands": [
      {
        "command": "patch-test.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "patch-test.generateTaskConfig",
        "title": "生成任务配置"
      },
      {
        "command": "patch-test.submitTask",
        "title": "提交任务到远程服务"
      },
      {
        "command": "patch-test.openTaskManager",
        "title": "打开任务管理器"
      },
      {
        "command": "patch-test.refreshTasks",
        "title": "刷新任务列表",
        "icon": "$(refresh)"
      },
      {
        "command": "patch-test.viewTaskDetails",
        "title": "查看任务详情",
        "icon": "$(eye)"
      },
      {
        "command": "patch-test.submitSingleTask",
        "title": "提交任务",
        "icon": "$(arrow-up)"
      },
      {
        "command": "patch-test.submitTaskFromTree",
        "title": "提交任务",
        "icon": "$(arrow-up)"
      },
      {
        "command": "patch-test.createTaskFromTemplate",
        "title": "从模板创建任务",
        "icon": "$(plus)"
      },
      {
        "command": "patch-test.editTask",
        "title": "编辑任务",
        "icon": "$(edit)"
      },
      {
        "command": "patch-test.deleteTask",
        "title": "删除任务",
        "icon": "$(trash)"
      },
      {
        "command": "patch-test.manageTaskResources",
        "title": "管理任务资源",
        "icon": "$(files)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "patch-test.refreshTasks",
          "when": "view == taskManager",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "patch-test.viewTaskDetails",
          "when": "view == taskManager",
          "group": "inline"
        },
        {
          "command": "patch-test.submitTaskFromTree",
          "when": "view == taskManager && viewItem == pendingTask",
          "group": "inline"
        },
        {
          "command": "patch-test.viewTaskDetails",
          "when": "view == taskManager",
          "group": "1_modification"
        },
        {
          "command": "patch-test.submitTaskFromTree",
          "when": "view == taskManager && viewItem == pendingTask",
          "group": "1_modification"
        },
        {
          "command": "patch-test.editTask",
          "when": "view == taskManager",
          "group": "1_modification"
        },
        {
          "command": "patch-test.deleteTask",
          "when": "view == taskManager",
          "group": "1_modification"
        },
        {
          "command": "patch-test.manageTaskResources",
          "when": "view == taskManager",
          "group": "1_modification"
        }
      ]
    },
    "contexts": [
      {
        "key": "workspaceHasTaskConfig",
        "operator": "equals",
        "operand": true,
        "when": "resourceExtname == .json && resourceFilename == patch-test"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}